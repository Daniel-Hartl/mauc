<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <TextView
                android:id="@+id/dataset_interval_value"
                android:layout_width="52dp"
                android:layout_height="25dp"
                android:text="0"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/dataset_interval_txt"
                app:layout_constraintStart_toEndOf="@+id/dataset_interval_txt" />

            <TextView
                android:id="@+id/dataset_interval_txt"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Zyk.: "
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/dataset_id_txt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dataset_oxygen_value"
                android:layout_width="36dp"
                android:layout_height="27dp"
                android:text="0"
                android:textColor="#2620C3"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/dataset_oxygen_txt"
                app:layout_constraintTop_toBottomOf="@+id/dataset_timestamp_txt" />

            <TextView
                android:id="@+id/dataset_oxygen_txt"
                android:layout_width="35dp"
                android:layout_height="27dp"
                android:layout_marginStart="12dp"
                android:text="O2:"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/dataset_puls_value"
                app:layout_constraintTop_toBottomOf="@+id/dataset_timestamp_txt" />

            <TextView
                android:id="@+id/dataset_puls_value"
                android:layout_width="36dp"
                android:layout_height="27dp"
                android:text="0"
                android:textColor="#FF0000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/dataset_puls_txt"
                app:layout_constraintStart_toEndOf="@+id/dataset_puls_txt" />

            <TextView
                android:id="@+id/dataset_id_txt"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dataset_topic_txt"
                android:layout_width="227dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:text="Topic"
                android:textColor="#000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/dataset_oxygen_value"
                app:layout_constraintTop_toBottomOf="@+id/dataset_timestamp_txt" />

            <TextView
                android:id="@+id/dataset_puls_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puls: "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dataset_id_txt" />

            <TextView
                android:id="@+id/dataset_timestamp_txt"
                android:layout_width="227dp"
                android:layout_height="25dp"
                android:text="0"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dataset_id_txt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
